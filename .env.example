# Clerk Authentication Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_***
CLERK_SECRET_KEY=sk_test_***

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# JWT Verification Key (for local development)
# Get this from Clerk Dashboard -> JWT Keys -> Show JWKS -> Copy Public Key
CLERK_JWT_KEY=-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----

# Clerk Webhook Secret
# Get this from Clerk Dashboard -> Webhooks -> Add Endpoint -> Copy Secret
CLERK_WEBHOOK_SECRET=whsec_***

# Supabase Storage (for image uploads)
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe Payment Processing
# Get these from Stripe Dashboard -> Developers -> API keys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_***
STRIPE_SECRET_KEY=sk_test_***

# Stripe Webhook Secret
# Get this from Stripe Dashboard -> Developers -> Webhooks -> Add Endpoint -> Copy Secret
STRIPE_WEBHOOK_SECRET=whsec_***

# Stripe Price IDs (for products)
# Get these from Stripe Dashboard -> Products -> Pricing
STRIPE_PRICE_ID_MONTHLY=price_***
STRIPE_PRICE_ID_YEARLY=price_***

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
